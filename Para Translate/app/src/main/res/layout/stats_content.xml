<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stats_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StatsFragment"
    tools:showIn="@layout/stats_activity">


    <Spinner
        android:id="@+id/statsLangSpinner"
        android:layout_width="match_parent"

        android:layout_height="69dp" />
    <TextView
        android:id="@+id/hintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statsLangSpinner"
        android:gravity="center_horizontal"
        android:text="Click on any word to know its meaning."/>

    <ListView
        android:id="@+id/myListView"
        android:layout_below="@+id/hintText"
        android:layout_width="match_parent"
        android:layout_height="662dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />

</RelativeLayout>

